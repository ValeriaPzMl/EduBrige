<%- include("partials/header"); -%>



  <link href="/stilos/forossty.css" type="text/css" rel="stylesheet"/>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
  <title>Materiales</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #171335 !important; margin-bottom: 40px;">
    <div class="container-fluid">
      <a class="navbar-brand" href="#" style="color: #e8ffce !important;">MATERIAL</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <!-- Enlaces de navegación -->
          <li class="nav-item"><a class="nav-link active" style="color: #e8ffce !important;" href="/areas">AREAS</a></li>
          <li class="nav-item"><a class="nav-link active" style="color: #e8ffce !important;" href="/teachers">TEACHERS</a></li>
          <li class="nav-item"><a class="nav-link active" style="color: #e8ffce !important;" href="/msg">MESSAGES</a></li>
          <li class="nav-item"><a class="nav-link active" style="color: #e8ffce !important;" href="/foros">FORUMS</a></li>
          <li class="nav-item"><a class="nav-link active" style="color: #e8ffce !important;" href="/material"><b>MATERIAL</b></a></li>
          <li class="nav-item"><a class="nav-link active" style="color: #e8ffce !important;" href="/quizes">QUIZZES</a></li>
        </ul>
        <span class="navbar-text">
          <a class="nav-link active" href="/perfil"><img src="/images/perf.png" height="30px"></a>
        </span>
      </div>
    </div>
  </nav>

  <div class="container container-90vh">
    <div class="row clearfix">
      <div class="col-lg-12">
        <button class="text-success border-5 border-success text-bg-light btn btn-primary d-block d-md-none mb-3" id="toggleChatList">Mostrar Categorías</button>

        <div class="card chat-app">
          <div id="plist" class="people-list chatn">
            <!-- Lista de Categorías -->
            <ul class="list-unstyled chat-list mt-2 mb-0">
              <% categorias.forEach(categoria => { %>
                <li class="clearfix <%= categoria === categoriaSeleccionada ? 'active' : '' %>">
                  <a href="/material/<%= categoria %>">
                    <img src="/images/fle.png" alt="icono de categoría">
                    <div class="about">
                      <div class="name"><%= categoria %></div>
                      <div class="status"> <i class="fa fa-circle <%= categoria === categoriaSeleccionada ? 'online' : 'offline' %>"></i> <%= categoria === categoriaSeleccionada ? 'activo' : 'inactivo' %> </div>
                    </div>
                  </a>
                </li>
              <% }); %>
            </ul>
          </div>

          <!-- Ventana de PDFs -->
          <div class="chat chatsss">
            <div class="chat-header clearfix">
              <div class="row">
                <div class="col-lg-6">
                  <div class="chat-about">
                    <h6 class="m-b-0"><%= categoriaSeleccionada || 'Selecciona una categoría' %></h6>
                  </div>
                </div>
              </div>
            </div>

            <!-- Lista de PDFs -->
            <div style="height: 60vh; overflow-y: auto;" class="chat-history">
              <ul class="m-b-0 pdf-list">
                <% if (pdfs && pdfs.length > 0) { %>
                  <% pdfs.forEach(pdf => { %>
                    <li class="clearfix">
                      
                        <a href="/PDFS/<%= categoriaSeleccionada %>/<%= pdf %>" target="_blank">
                          <div class="file">
                          <img src="/images/pdfss.png" height="200px">
                           <%= pdf %>
                          </div>
                      </a>
                      
                    </li>
                  <% }); %>
                <% } else if (categoriaSeleccionada) { %>
                  <li>No hay materiales en esta categoría.</li>
                <% } else { %>
                  <li>Selecciona una categoría para ver los materiales.</li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  
  <script>
    document.getElementById('toggleChatList').addEventListener('click', function() {
      var chatList = document.getElementById('plist');
      chatList.classList.toggle('open');
      this.textContent = chatList.classList.contains('open') ? 'Ocultar Categorías' : 'Mostrar Categorías';
    });
  </script>
  
  <%- include("partials/footer"); -%>
