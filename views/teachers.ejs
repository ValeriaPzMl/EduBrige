<%- include("partials/header"); -%>


    <link rel="stylesheet" href="./stilos/teachersstyle.css"/>
    <title>Teachers</title>
</head>
<body>

  <%- include("partials/navbar"); -%>

    
    <div class="gen">
      <% maestros.forEach(maestro => { %>
        <div class="profile-card">
          <div class="profile-icon">
            <!-- Imagen de perfil (misma para todos los maestros) -->
            <img src="/images/perf.png" height="100px">
          </div>
          <div class="info">
            <!-- Nombre del maestro -->
            <div class="profile-name"><%= maestro.nombre %> <%= maestro.apellidos %></div>
            <!-- Correo del maestro -->
            <div class="profile-info"><b>Mail:</b> <%= maestro.correo %></div>
            <!-- Materia que enseÃ±a el maestro -->
            <div class="profile-info"><b>Areas:</b> <%= maestro.materia || 'N/A' %></div>
            <!-- Idiomas que habla el maestro, separados por comas -->
            <div class="profile-info"><b>Languages:</b> <%= maestro.idiomas.join(', ') %></div>
          </div>
        </div>
      <% }); %>
    </div> 

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

